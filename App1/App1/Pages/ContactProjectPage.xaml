<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ContactProjectPage"
             Visual="Default">
    <ContentPage.Content>
        <StackLayout Spacing="-5">
            <Entry Visual="Material" Placeholder="Телефон №1" x:Name="Phone" Text="{Binding Phone}" BackgroundColor="#e8e8e8" HeightRequest="60" Margin="40, 30, 40, 0"/>
            <Entry Visual="Material" Placeholder="Email" x:Name="Email" Text="{Binding Email}" BackgroundColor="#e8e8e8" HeightRequest="60" Margin="40, 30, 40, 0"/>
            <Entry Visual="Material" Placeholder="Адрес" x:Name="Adress" Text="{Binding Address}" BackgroundColor="#e8e8e8" HeightRequest="60" Margin="40, 30, 40, 0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>